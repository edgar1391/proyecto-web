<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
       <servlet-name>BaseDato<servlet-name/>
       <servlet-class/>controlador.BaseDato<servlet-class/>
    </servlet>
    <servlet>
       <servlet-name>Dato<servlet-name/>
       <servlet-class/>modelo.ConectarBaseDato<servlet-class/>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>controlador.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BaseDato</servlet-name>
        <url-pattern>bd</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
